  year = {2013},
  keywords = {Animals,Neurons,Synapses,Synapses: physiology,Mice,Thalamus,Thalamus: physiology,Corpus Striatum,Corpus Striatum: physiology,Calcium-Calmodulin-Dependent Protein Kinase Type 2,Intralaminar Thalamic Nuclei,Transgenic},
  pages = {257-72},
  file = {C:\\Users\\Seymour Snyder\\Documents\\Mendeley Desktop\\Ellender et al. - 2013 - Heterogeneous properties of central lateral and parafascicular thalamic synapses in the striatum.pdf},
  pmid = {23109111}
