@article{wildProjectionsDorsomedialNucleus1997,
  title = {Projections of the Dorsomedial Nucleus of the Intercollicular Complex ({{DM}}) in Relation to Respiratory-Vocal Nuclei in the Brainstem of Pigeon ({{Columba}} Livia) and Zebra Finch ({{Taeniopygia}} Guttata)},
