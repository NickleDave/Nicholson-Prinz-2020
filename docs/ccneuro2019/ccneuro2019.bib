@article{goldbergSingingrelatedNeuralActivity2010,
  title = {Singing-Related Neural Activity Distinguishes Two Putative Pallidal Cell Types in the Songbird Basal Ganglia: Comparison to the Primate Internal and External Pallidal Segments},
